    <body>
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKFND3G" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
        <!-- End Google Tag Manager (noscript) -->

        <div class="container">
            {% if header == 'full' %}
                <h1 class="mt-2"><strong>Iva Hujerová</strong> <small>(Kusáková)</small></h1>
            {% else %}
                <h1 class="mt-2"><strong>Iva Hujerová</strong></h1>
            {% endif %}
            <h2 class="subtitle mb-3">Pomáhám firmám s&nbsp;online marketingem</h2>

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <ul class="navbar-nav ">
                    <li class="nav-item {% if page.url == '/' %}active{% endif %}">
                        <a class="nav-link" href="/" >Hlavní stránka</a>
                    </li>
                    <li class="nav-item {% if page.url == '/o-mne/' %}active{% endif %}">
                        <a class="nav-link" href="/o-mne/">O mně</a>
                    </li>
                    <li class="nav-item {% if '/blog' in page.url %}active{% endif %}">
                        <a class="nav-link" href="/blog/">Blog</a>
                    </li>
                </ul>
            </nav>

            {{ content | safe }}

            {% if page.url != '/blog/' %}
                <div class="row">
                    <div class="col">
                        <h2>Nově na blogu</h2>
                        <ul>
                            {%- for blogpost in collections.blogpost | reverse | slicejs(3) -%}
                                <li>
                                    <a href="{{ blogpost.url }}">
                                        {{ blogpost.data.title -}}
                                    </a>
                                    <small>{{ blogpost.date | dateformat }}</small>
                                    {% if blogpost.data.perex %}
                                        <p>{{ blogpost.data.perex }}</p>
                                    {% endif %}
                                </li>
                            {%- endfor -%}
                        </ul>
                    </div>
                </div>
            {% endif %}
        </div>
    </body>

</html>
