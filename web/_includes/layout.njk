        <link rel="stylesheet" href="/assets/bootstrap.min.css">
        <style>
            h2.subtitle {
                font-size: 1.25rem;
                font-weight: 400;
            }

            .lead-photo {
                max-width: 200px;
            }

            h3 {
                font-size: 1.5rem;
            }

            .promo-block {
                padding: 1rem 1rem 0 1rem;
            }

            @media (min-width: 576px) {
                .block-border-right {
                    border-right: 1px solid silver;
                }

                .block-border-bottom {
                    border-bottom: 1px solid silver;
                }
            }

            .partnership-block {
                padding: 1rem 1rem 0 1rem;
            }

